<Window x:Class="PlaylistConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlaylistConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF353865" Offset="0.75"/>
                <GradientStop Color="#FF00D6FF" Offset="1"/>
                <GradientStop Color="#FFD49AFF" Offset="0.96"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="AppNameLabel" Content="PlaylistConverter" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" FontStyle="Italic" Grid.Column="1" Grid.ColumnSpan="2" Foreground="White"/>
        <Button x:Name="OpenButton" Grid.Column="1" Content="Open" Grid.Row="2" VerticalAlignment="Center" Height="44" Background="#FFDDDDDD" BorderThickness="1,1,1,1" BorderBrush="Black" Grid.ColumnSpan="2" Margin="122,0,122,0"/>
        <Button x:Name="YoutubeLoginButton" Grid.Column="1" Content="Youtube Login" Grid.Row="1" VerticalAlignment="Center" Height="44" Background="#FFDDDDDD" BorderThickness="1,1,1,1" BorderBrush="Red" Margin="22,0,22,0" Click="YoutubeLoginButton_Click"/>
        <Button x:Name="SpotifyLoginButton" Grid.Column="2" Content="Spotify Login" Grid.Row="1" VerticalAlignment="Center" Height="44" Background="#FFDDDDDD" BorderThickness="1,1,1,1" BorderBrush="#FF00FF10" Margin="22,0,22,0" Click="SpotifyLoginButton_Click"/>

    </Grid>
</Window>
